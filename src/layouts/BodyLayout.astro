---
import BaseHead from "@/components/BaseHead.astro";
import DotsRow from "@/components/DotsRow.astro";

const {
  title,
  description,
  bodyClass = "grid grid-cols-1 relative max-w-[1200px] text-center",
} = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>
  <body class={bodyClass}>
    <canvas id="ink-canvas" aria-hidden="true"></canvas>
    <DotsRow class="dots-row--top" />
    <slot />
    <DotsRow class="dots-row--bottom" />
    <script type="module" src="/scripts/ink-spray.js"></script>
  </body>
</html>
